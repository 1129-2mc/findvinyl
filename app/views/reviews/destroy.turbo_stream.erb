<%= turbo_stream.remove @review %>
<%= turbo_stream.update 'review-count', partial: 'shops/review_count', locals: { reviews_count: @reviews_count } %>
<%= turbo_stream.update 'flash', partial: 'shared/flash_message' %>
<% if @reviews_count == 0 %>
  <%= turbo_stream.update 'reviews' do %>
    <p id="no_reviews" class="text-center m-6"><%= t('shops.no_review') %></p>
  <% end %>
<% end %>
