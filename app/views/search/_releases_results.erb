<div class="container mx-auto">
  <div class="flex justify-between items-center border-b py-2 mb-4">
    <span class="flex-1 font-semibold"><%= t('results.columns.title') %></span>
    <span class="flex-1 font-semibold"><%= t('results.columns.artist') %></span>
    <span class="flex-1 font-semibold"><%= t('results.columns.format') %></span>
  </div>
  <% results.each do |release| %>
    <div>
      <div class="flex">
        <p class="flex-1 link link-hover py-2 mb-2">
          <%= link_to release.name, release_path(release) %>
        </p>
        <p class="flex-1">
          <%= release.artist_credit.name %>
        </p>
        <p class="flex-1">
          <% release.mediums.each do |medium| %>
            <% if medium.medium_format.present? %>
              <%= medium.medium_format.name %>
            <% else %>
              <%= " " %>
            <% end %>
          <% end %>
        </p>
      </div>
    </div>
  <% end %>
</div>
