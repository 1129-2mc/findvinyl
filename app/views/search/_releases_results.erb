<div class="overflow-x-auto md:overflow-x-visible">
  <div class="min-w-[800px] md:w-full">
    <div class="flex justify-between items-center border-b border-neutral-600 py-2 px-4 mb-4">
      <div class="flex-1 font-semibold"><%= t('defaults.release_title') %></div>
      <div class="flex-1 font-semibold"><%= t('defaults.artist') %></div>
      <div class="flex-1 font-semibold"><%= t('defaults.format') %></div>
    </div>

    <% results.each do |release| %>
      <%= link_to release_path(release), class: 'block w-full hover:bg-base-200 rounded-lg' do %>
        <div class="flex justify-between items-center w-full p-4">
          <div class="flex-1 w-1/3 truncate mr-4">
            <%= release.name %>
          </div>
          <div class="flex-1 w-1/3 truncate mr-4">
            <%= release.artist_credit.name %>
          </div>
          <div class="flex-1 w-1/3 truncate mr-4">
            <% release.mediums.each do |medium| %>
              <% if medium.medium_format.present? %>
                <%= medium.medium_format.name %>
              <% else %>
                <%= " " %>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
