<div class="overflow-x-auto md:overflow-x-visible">
  <div class="min-w-[800px] md:w-full">
    <div class="flex justify-between items-center border-b border-neutral-600 py-2 mb-4">
      <div class="flex-1 font-semibold"><%= t('results.columns.title') %></div>
      <div class="flex-1 font-semibold"><%= t('results.columns.artist') %></div>
      <div class="flex-1 font-semibold"><%= t('results.columns.format') %></div>
    </div>

    <% results.each do |release| %>
      <%= link_to release_path(release), class: 'block w-full hover:bg-base-200 rounded-lg' do %>
        <div class="scroll flex items-center justify-between p-4 w-full whitespace-nowrap">
          <div class="flex-1 w-1/3">
            <div class="truncate mr-4">
              <%= release.name %>
            </div>
          </div>
          <div class="flex-1 w-1/3">
            <div class="truncate mr-4">
              <%= release.artist_credit.name %>
            </div>
          </div>
          <div class="flex-1 w-1/3">
            <% release.mediums.each do |medium| %>
              <% if medium.medium_format.present? %>
                <%= medium.medium_format.name %>
              <% else %>
                <%= " " %>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
