<div class="container mx-auto py-8">
  <div class="flex justify-center">
    <div class="w-full max-w-md">
      <h1 class="text-2xl font-bold text-center"><%= t('.title') %></h1>
      <%= form_with url: login_path, class: 'px-8 pt-6 pb-8' do |f| %>
        <div class="form-control">
          <%= f.label :email, class: 'block text-gray-accent mb-2' %>
          <%= f.text_field :email, class: 'input input-bordered bg-white text-base-100 mb-2' %>
        </div>

        <div class="form-control">
          <%= f.label :password, class: 'block text-accent mb-2' %>
          <%= f.password_field :password, class: 'input input-bordered bg-white text-base-100 mb-6' %>
        </div>

        <div class="text-center">
          <%= f.submit t('.login'), class: 'btn btn-primary text-white' %>
        </div>
      <% end %>

      <div class="text-center mt-4">
        <%= link_to t('.to_register_page'), new_user_path, class: 'text-sm text-text-accent mr-4' %>
        <%= link_to t('.password_forget'), '#', class: 'text-sm text-text-accent' %>
      </div>
    </div>
  </div>
</div>
