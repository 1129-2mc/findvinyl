<div class="flex justify-center items-center py-8">
  <div class="w-full max-w-md mx-auto bg-base-200 rounded-lg p-6">
    <h1 class="text-2xl font-bold text-center"><%= t('.title') %></h1>
    <%= form_with url: login_path, class: 'px-8 pt-6 pb-8' do |f| %>
      <div class="form-control">
        <%= f.label :email, class: 'block text-gray-accent mb-2' %>
        <%= f.text_field :email, class: 'input input-bordered bg-white text-base-100 mb-2', required: true %>
      </div>

      <div class="form-control">
        <%= f.label :password, class: 'block text-accent mb-2' %>
        <%= f.password_field :password, class: 'input input-bordered bg-white text-base-100 mb-6', required: true %>
      </div>

      <div class="text-center">
        <%= f.submit t('.login'), class: 'btn btn-primary text-white' %>
      </div>
    <% end %>
  </div>
</div>

<div class="text-center">
  <%= link_to t('.to_register_page'), new_user_path, class: 'text-sm text-text-accent mr-4' %>
  <%= link_to t('.password_forget'), new_password_reset_path, class: 'text-sm text-text-accent' %>
</div>
