<div class="container mx-auto py-8">
  <div class="w-full md:w-10/12 mx-auto">
    <h1 class="text-2xl font-bold text-center mt-4 mb-6"><%= t('my_page.title') %></h1>

    <div class="flex flex-col px-3 md:px-0 md:grid gap-4 grid-cols-2 my-4">
      <div class="order-2 md:order-1 mb-2 md:mb-0">
        <h2 class="text-lg text-gray-400 mt-2 mb-4"><%= t('my_page.what_to_listen') %></h2>
        <div class="card bg-base-200 py-7">
          <% if @random.empty? %>
            <div class="text-center p-5">
              <%= t('my_page.add_to_collection') %>
            </div>
          <% else %>
            <div data-controller="swiper">
              <div class="swiper">
                <div class="swiper-wrapper">
                  <% @random.each do |item| %>
                    <div class="swiper-slide">
                      <div class="flex items-center font-bold text-white mb-1 px-4">
                        <span class="i-bi-music-note bg-primary w-4 h-4 mr-2" aria-hidden="true"></span>
                        <%= item.title.name %>
                      </div>
                      <div class="ml-6 px-4">
                          <%= item.artist_name.name %>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <div class="order-first md:order-2 flex justify-center md:justify-end md:mr-4 px-4">
        <div>
          <div class="flex flex-col items-center">
            <div>
              <%= image_tag current_user.avatar_url, class: 'rounded-full mb-2', width: '100', height: '100'%>
            </div>
            <div class="mb-1">
              <%= current_user.name %>
            </div>
          </div>
          <div class="text-center md:text-right text-sm text-primary link link-hover">
            <%= link_to t('my_page.details'), profile_path %>
          </div>
        </div>
      </div>

      <div class="order-3">
        <div class="p-6 mx-auto bg-base-200 rounded-2xl">
          <h2 class="text-center md:mb-2"><%= t('records.index.monthly_report') %></h2>
          <div class="md:py-6">
            <%= render 'shared/pie_chart' %>
          </div>
          <div class="text-right text-sm text-primary link link-hover">
            <%= link_to t('my_page.details'), report_show_records_path %>
          </div>
        </div>
      </div>

      <div class="order-4 mt-4 md:mt-5 md:ml-4">
        <%= link_to collection_items_path, class: "block w-full bg-secondary py-4 md:py-6 rounded shadow hover:bg-base-200" do %>
          <div class="flex items-center justify-center">
            <span class="i-bi-vinyl bg-primary w-4 h-4 mr-2" aria-hidden="true"></span>
            <span><%= t('my_interests.collection_list') %></span>
          </div>
        <% end %>
      
        <%= link_to want_items_path, class: "block w-full bg-secondary py-4 md:py-6 rounded shadow hover:bg-base-200 mt-4" do %>
          <div class="flex items-center justify-center">
            <span class="i-bi-arrow-through-heart bg-primary w-4 h-4 mr-2" aria-hidden="true"></span>
            <span><%= t('my_interests.want_list') %></span>
          </div>
        <% end %>
      
        <%= link_to records_path, class: "block w-full bg-secondary py-4 md:py-6 rounded shadow hover:bg-base-200 mt-4" do %>
          <div class="flex items-center justify-center">
            <span class="i-bi-bar-chart bg-primary w-4 h-4 mr-2" aria-hidden="true"></span>
            <span><%= t('my_interests.records_reports') %></span>
          </div>
        <% end %>
      
        <%= link_to bookmarks_shops_path, class: "block w-full bg-secondary py-4 md:py-6 rounded shadow hover:bg-base-200 mt-4" do %>
          <div class="flex items-center justify-center">
            <span class="i-bi-bookmark bg-primary w-4 h-4 mr-2" aria-hidden="true"></span>
            <span><%= t('my_interests.bookmarked_shops') %></span>
          </div>
        <% end %>

        <%= link_to review_shops_shops_path, class: "block w-full bg-secondary py-4 md:py-6 rounded shadow hover:bg-base-200 mt-4" do %>
          <div class="flex items-center justify-center">
            <span class="i-ic-outline-rate-review bg-primary w-5 h-5 mr-2" aria-hidden="true"></span>
            <span><%= t('my_interests.reviewed_shops') %></span>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
