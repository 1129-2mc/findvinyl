<div class="flex flex-col justify-center">
  <div class="max-w-lg p-6 mx-auto bg-base-200 rounded-2xl">
    <div class="flex justify-between pb-4">
      <nav class="flex items-center justify-between w-full">
        <div>
          <%= link_to t('simple_calendar.previous', default: '◀︎'), calendar.url_for_previous_view, class: "cursor-pointer" %>
        </div>
        
        <div class="flex-grow text-center">
          <time datetime="<%= start_date.strftime('%Y-%m') %>" class="calendar-title"><%= t('date.month_names')[start_date.month] %> <%= start_date.year %></time>
        </div>
        
        <div>
          <%= link_to t('simple_calendar.next', default: '▶︎'), calendar.url_for_next_view, class: "cursor-pointer" %>
        </div>
      </nav>
    </div>

    <table class="w-full mt-4 table-auto">
      <thead class="text-left">
        <tr>
          <% date_range.slice(0, 7).each do |day| %>
            <th class="px-5 py-2 text-sm font-semibold text-accent"><%= t('date.abbr_day_names')[day.wday] %></th>
          <% end %>
        </tr>
      </thead>

      <tbody>
        <% date_range.each_slice(7) do |week| %>
          <tr>
            <% week.each do |day| %>
              <%= content_tag :td, class: "w-14 h-14 px-4 py-2 border hover:bg-gray-100 text-xs text-left align-top #{calendar.td_classes_for(day)}" do %>
                <% if @records_by_date[day].present? %>
                  <%= link_to daily_records_records_path(date: day.to_s), class: "block w-full h-full" do %>
                    <% instance_exec(day, @records_by_date[day] || [], &passed_block) %>
                  <% end %>
                <% else %>
                  <div class="block w-full h-full">
                    <% instance_exec(day, [], &passed_block) %>
                  </div>
                <% end %>
              <% end %>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="flex justify-end w-full mt-4">
    <%= link_to new_record_path, class: "btn btn-primary text-white" do %>
      <%= t('記録する') %>
    <% end %>
  </div>
</div>
