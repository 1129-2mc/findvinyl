<div class="flex justify-center items-center py-8">
  <div class="w-full max-w-md mx-auto bg-base-200 rounded-lg p-6">
    <h1 class="text-2xl font-bold text-center mb-8"><%= t('records.new.create_record') %></h1>

    <%= form_with model: @record, local: true, html: { id: 'record_form' } do |form| %>
      <div>
        <label for="item_search" class="block text-accent font-bold mb-2"><%= t('records.new.search_items') %></label>
        <input type="text" id="item_search" name="item_search" class="appearance-none border rounded w-full bg-white py-2 px-3 text-base-100 leading-tight focus:outline-none focus:shadow-outline" placeholder="<%= t('records.new.title_artist_label') %>">
      </div>

      <div id="search_results" class="max-h-48 overflow-y-auto rounded bg-white text-base-100 p-2 mb-4"></div>

      <h2 class="font-bold mb-4 mt-4"><%= t('records.daily_records.listened_records') %></h2>
      <div id="selected_items" class="mb-4 mt-4"></div>

      <div class="mb-4">
        <%= form.label t('records.new.comment'), class: 'block text-accent font-bold mb-2' %>
        <%= form.text_area :content, rows: 4, class: 'shadow appearance-none border rounded w-full bg-white py-2 px-3 text-base-100 leading-tight focus:outline-none focus:shadow-outline' %>
      </div>

      <div class="flex justify-end space-x-2 mt-4">
        <%= form.submit t('helpers.submit.submit'), class: "btn btn-primary text-white" %>
      </div>
    <% end %>
  </div>
</div>

<%= javascript_include_tag 'record_new_form' %>
