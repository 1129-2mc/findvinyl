<div class="flex justify-center items-center py-8">
  <div class="w-full max-w-md mx-auto bg-base-200 rounded-lg p-6">
    <div class="flex justify-center items-center">
    <h1 class="text-2xl font-bold text-center mb-8"><%= t('records.show.title') %></h1>
    </div>

    <% if @record.items.any? %>
      <div class="mb-4">
        <h3 class="text-lg font-bold mb-4"><%= t('records.daily_records.listened_records') %></h3>
        <ul>
          <% @record.items.each do |item| %>
            <li class="mb-4">
              <div class="flex items-center mb-1">
                <span class="i-bi-music-note bg-primary w-4 h-4 mr-2" aria-hidden="true"></span>
                <span class="font-bold text-white"><%= item.title.name %></span>
              </div>
              <div class="ml-6">
                <%= item.artist_name.name %>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <h3 class="text-lg font-bold mb-2"><%= t('records.new.comment') %></h3>
    <div class="p-2 rounded min-h-[2rem] mb-2">
      <%= simple_format(@record.content) %>
    </div>

    <h2 class="text-right mb-4"><%= @record.created_at.strftime("%Y/%m/%d %H:%M") %></h2>

    <div class="flex justify-end space-x-2 mt-4">
      <%= link_to edit_record_path(@record) do %>
        <div class="tooltip" data-tip="<%= t('helpers.submit.edit') %>">
          <span class="i-bi-pencil bg-primary w-5 h-5 mr-2" aria-hidden="true"></span>
        </div>
      <% end %>
      <%= link_to record_path(@record), data: { turbo_method: :delete, turbo_confirm: t('records.confirm_delete') } do %>
        <div class="tooltip" data-tip="<%= t('helpers.submit.delete') %>">
          <span class="i-bi-trash3 bg-primary w-5 h-5 mr-2" aria-hidden="true"></span>
        </div>
      <% end %>
    </div>
  </div>
</div>
