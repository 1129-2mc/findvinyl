<div class="container mx-auto py-8">
  <div class="flex flex-wrap">
    <div class="w-full lg:w-10/12 lg:mx-auto">
      <h1 class="text-2xl font-bold text-center mb-8"><%= t('records.index.record_report') %></h1>
      <div class="flex justify-between">
        <div class="w-1/2">
          <%= month_calendar do |date| %>
            <%= date.day %>
            <% if @records_by_date.include?(date) %>
              <span class="i-bi-music-note bg-primary w-4 h-4 ml-1" aria-hidden="true">
            <% end %>
          <% end %>
        </div>
        <div class="w-1/2">
          <div class="max-w-lg p-6 mx-auto bg-base-200 rounded-2xl">
            <h2 class="text-center mb-2"><%= t('records.index.monthly_report') %></h2>
            <div class="py-10">
              <%= pie_chart @artist_name_distribution, library: {
                plugins: {
                  legend: {
                    display: true,
                    position: 'left'
                  }
                }
              } %>
            </div>
            <div class="text-right text-primary">
              <%= link_to t('my_page.details'), "#" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
