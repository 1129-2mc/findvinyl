<div class="container">
  <h1 class="text-2xl font-bold text-center mb-8"><%= t('records.index.record_report') %></h1>
  <div class="flex flex-col items-center">
    <div class="flex w-full">
      <div class="flex-1 flex items-center justify-center"></div>
      <div class="flex-1 flex items-center justify-center">
        <%= month_calendar do |date| %>
          <%= date.day %>
          <% if @records_by_date.include?(date) %>
            <span class="i-bi-music-note bg-primary w-4 h-4 ml-1" aria-hidden="true">
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
