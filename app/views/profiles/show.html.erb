<div class="flex justify-center items-center py-8">
  <div class="w-full max-w-lg mx-auto bg-base-200 rounded-lg p-6">
    <h1 class="text-2xl font-bold text-center mt-4 mb-6"><%= t('profile.title') %></h1>
    <div class="flex justify-between items-center mb-6">
      <div class="grid grid-cols-1 gap-4">
        <div class="flex flex-col gap-2 mb-2">
          <div class="font-bold text-white"><%= t('activerecord.attributes.user.name') %></div>
          <div class="pl-2"><%= current_user.name %></div>
        </div>
        <div class="flex flex-col gap-2">
          <div class="font-bold text-white"><%= t('activerecord.attributes.user.email') %></div>
          <div class="pl-2"><%= current_user.email %></div>
        </div>
      </div>
      <%= image_tag current_user.avatar_url, class: 'rounded-full', width: '120', height: '120' %>
    </div>
    <div class="text-center">
      <%= link_to t('helpers.submit.edit'), "#", class: "btn btn-primary text-white"%>
    </div>
  </div>
</div>
