<div class="container mx-auto py-8 px-3 md:px-0">
  <div class="w-full max-w-lg mx-auto bg-base-200 rounded-lg py-6 px-4 md:px-10">
    <h1 class="text-2xl font-bold text-center mb-6"><%= t('.title') %></h1>
    <div class="flex justify-between items-center mb-6">
      <div class="grid grid-cols-1 gap-4">
        <div class="flex flex-col gap-2 mb-2">
          <div class="font-bold text-white"><%= t('.user_name') %></div>
          <div class="pl-2"><%= current_user.name %></div>
        </div>
        <div class="flex flex-col gap-2">
          <div class="font-bold text-white"><%= t('.email') %></div>
          <div class="pl-2"><%= current_user.email %></div>
        </div>
      </div>
      <%= image_tag current_user.avatar_url, class: 'rounded-full', style: 'object-fit: cover; width: 120px; height: 120px;' %>
    </div>
    <div class="text-center">
      <%= link_to t('defaults.edit'), edit_profile_path, class: "btn btn-primary text-white"%>
    </div>
  </div>
</div>
