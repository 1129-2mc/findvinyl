<div class="flex justify-center items-center py-8">
  <div class="w-full max-w-md mx-auto bg-base-200 rounded-lg p-6">
    <h1 class="text-2xl font-bold text-center mb-6"><%= t('.title') %></h1>
    <%= form_with url: password_resets_path, class: 'px-8' do |f| %>
      <div class="form-control">
        <%= f.label :email, class: "block text-accent mb-2" %>
        <%= f.email_field :email, class: 'input input-bordered bg-white text-base-100 mb-6', required: true %>
      </div>
      <div class="text-center">
        <%= f.submit t('.submit'), class: "btn btn-primary text-white"%>
      </div>
    <% end %>
  </div>
</div>
