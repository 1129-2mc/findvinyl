<div class="container mx-auto py-8 px-3 md:px-0">
  <div class="flex flex-col">
    <div class="w-full md:w-8/12 mx-auto bg-base-200 rounded-lg p-8 md:p-10">
     <h1 class="text-2xl font-bold text-center mb-8"><%= t('.title') %></h1>

      <% if @bookmark_shops.present? %>
        <% @bookmark_shops.each do |shop| %>
          <%= link_to shop_path(shop), class: "block card bg-secondary mb-4 p-4 shadow-xl hover:bg-base-200" do %>
            <div class="flex flex-col md:flex-row">
              <div class="flex flex-shrink-0 justify-center mb-3 md:mb-0 md:justify-start md:mr-4">
                <img src="<%= @shop_images[shop.id] %>" class="object-cover w-[200px] h-[100px] rounded-lg" alt="<%= shop.name %>" />
              </div>
              <div class="flex flex-col justify-center ml-2">
                <div class="text-white text-lg font-bold mb-2"><%= shop.name %></div>
                <p class="text-accent">ã€’<%= shop.postal_code %></p>
                <p class="text-accent"><%= shop.address %></p>
              </div>
            </div>
          <% end %>
        <% end %>
        <div class="mt-6 flex flex-wrap justify-center">
          <%= paginate @bookmark_shops %>
        </div>
      <% else %>
        <div class="flex items-center justify-center py-20">
          <p class="text-center"><%= t('.no_bookmark_shop') %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
