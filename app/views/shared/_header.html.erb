<div data-controller="menu">
  <header>
    <div class="navbar bg-base-100">
      <div class="flex-1">
        <a class="btn btn-ghost text-xl">VinylLog</a>
      </div>
      <div class="flex justify-center items-center mx-4">
        <%= render 'shared/search_form', q: @q, url: search_path %>
      </div>

      <div class="flex-1 justify-end flex">
        <button data-action="menu#toggleMenu" class="btn btn-square btn-ghost" id="menuToggle">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-5 h-5 stroke-current">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
          </svg>
        </button>
      </div>
    </div>
  </header>
  <div id="sidebar" class="fixed top-0 right-0 w-64 h-full bg-base-100 transform translate-x-full transition-transform duration-300 ease-in-out z-50" data-menu-target="sidebar">
    <button data-action="menu#closeMenu" class="btn btn-square btn-ghost absolute right-2 top-2" id="closeMenu">
      Ã—
    </button>
    <div class="p-5">
      <ul>
        <%= link_to t('header.home'), "#", class: "block p-2" %>
        <%= link_to t('header.search_shops'), "#", class: "block p-2" %>
        <li>
          <%= link_to t('header.my_page'), "#", class: "block p-2" %>
          <ul class="pl-4">
            <%= link_to t('my_interests.collection_list'), collection_items_path, class: "block p-2" %>
            <%= link_to t('my_interests.wantlist'), want_items_path, class: "block p-2" %>
            <%= link_to t('my_interests.records_reports'), records_path, class: "block p-2" %>
            <%= link_to t('my_interests.bookmarked_shops'), "#", class: "block p-2" %>
          </ul>
        </li>
        <%= link_to t('header.logout'), logout_path, method: :delete, data: { turbo_method: :delete }, class: "block p-2" %>
      </ul>
    </div>
  </div>
</div>
